<<function Index.add_entry>>=
let rec add_entry idx entry =
  match idx with
  | [] -> [entry]
  | x::xs ->
    (match entry.name <=> x.name with
    | Sup -> x::(add_entry xs entry)
    (* replace old entry is ok *)
    | Equal -> entry::xs
    (* the entries are sorted *)
    | Inf -> entry::x::xs
    )
