<<function Hexsha.to_string>>=
let to_string ((*`Hex*) s) =
  if s = "" 
  then ""
  else
    let n = String.length s in
    let buf = Bytes.create (n/2) in
    let rec aux i j =
      if i >= n 
      then ()
      else if j >= n 
           then raise (Invalid_argument "hex conversion: invalid hex string")
      else (
        Bytes.set buf (i/2) (to_char s.[i] s.[j]);
        aux (j+1) (j+2)
      )
    in
    aux 0 1;
    buf
@
