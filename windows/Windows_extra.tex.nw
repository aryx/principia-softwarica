    Image *b;
    Font *ft;

    b = f->display->screenimage;
    ft = f->font;
    if(f->tick)
        freeimage(f->tick);
    f->tick = allocimage(f->display, Rect(0, 0, FRTICKW, ft->height), b->chan, 0, DWhite);
    if(f->tick == nil)
