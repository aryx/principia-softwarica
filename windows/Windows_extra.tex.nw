<<function xfidclose>>=
void
xfidclose(Xfid *x)
{
    Fcall t;
    Window *w;
    int nb, nulls;

    w = x->f->w;
    switch(FILE(x->f->qid)){
    case Qconsctl:
        if(w->rawing){
            w->rawing = FALSE;
            wsendctlmesg(w, Rawoff, ZR, nil);
        }
        if(w->holding){
            w->holding = FALSE;
            wsendctlmesg(w, Holdoff, ZR, nil);
        }
        w->ctlopen = FALSE;
        break;
    case Qcursor:
        w->cursorp = nil;
        wsetcursor(w, FALSE);
        break;
    case Qmouse:
        w->resized = FALSE;
        w->mouseopen = FALSE;
        if(w->i != nil)
            wsendctlmesg(w, Refresh, w->i->r, nil);
        break;
    /* odd behavior but really ok: replace snarf buffer when /dev/snarf is closed */
    case Qsnarf:
        if(x->f->mode==ORDWR || x->f->mode==OWRITE){
            snarf = runerealloc(snarf, ntsnarf+1);
            cvttorunes(tsnarf, ntsnarf, snarf, &nb, &nsnarf, &nulls);
            free(tsnarf);
            tsnarf = nil;
            ntsnarf = 0;
        }
        break;
    case Qwctl:
        if(x->f->mode==OREAD || x->f->mode==ORDWR)
            w->wctlopen = FALSE;
        break;
    }
    wclose(w);
    filsysrespond(x->fs, x, &t, nil);
}
