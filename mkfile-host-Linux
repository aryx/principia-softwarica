MNT=MISC/MNT
OPTIONS='offset=512,uid=1000,gid=1000'

disk:V:
	sudo mount dosdisk.img -t vfat $MNT -o $OPTIONS
	rm -rf $MNT/*
	cp -a ROOT/* $MNT/
	sudo umount $MNT

disksrc:V:
	sudo mount dosdisk.img -t vfat $MNT -o $OPTIONS
	rm -rf $MNT/*
	cp -a ROOT/* $MNT/
    # not dosdisk.img!
    cp -a [a-ce-z]* database debuggers $MNT/src || echo some errors are ok 
    # symlinks not supported on vfat
    cp include/ALL/* $MNT/src/include/ALL/ || echo some errors are ok 
    cp -a ROOT $MNT/src/
	sudo umount $MNT

mount:V:
	sudo mount dosdisk.img -t vfat $MNT -o $OPTIONS
umount:V:
	sudo umount $MNT
