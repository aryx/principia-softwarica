<<function [[equal]](uniq.c)>>=
bool
equal(char *b1, char *b2)
{
    char c;

    if(fields || letters) {
        b1 = skip(b1);
        b2 = skip(b2);
    }
    for(;;) {
        c = *b1++;
        if(c != *b2++) {
            if(c == '\0' && mode == 's')
                return true;
            return false;
        }
        if(c == '\0') {
            uniq = true;
            return true;
        }
    }
}
@

<<function [[skip]](uniq.c)>>=
char*
skip(char *s)
{
    int nf, nl;

    nf = nl = 0;
    while(nf++ < fields) {
        while(*s == ' ' || *s == '\t')
            s++;
        while(!(*s == ' ' || *s == '\t' || *s == '\0') ) 
            s++;
    }
    while(nl++ < letters && *s != '\0') 
            s++;
    return s;
}
