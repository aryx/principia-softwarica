</$objtype/mkfile

TARG=`{ls *.[cy] | sed '/\.tab\.c$/d;s/..$//'}
HFILES=/$objtype/include/u.h /sys/include/libc.h /sys/include/bio.h
BIN=/$objtype/bin
PROGS=${TARG:%=$O.%}
YFLAGS=-d


cpuobjtype=`{sed -n 's/^O=//p' /$cputype/mkfile}

#NOMK=awk|faces
#DIRS=`{ls -l | sed '/^d/!d; s/.* //; /^('$NOMK')$/d'}

TOP=../../..

#note: aa and cc must be early in the list
DIRS=\
 $TOP/builders/mk\
 \
 $TOP/assemblers/aa\
 $TOP/assemblers/8a\
 $TOP/assemblers/5a\
 $TOP/assemblers/misc\
