 $TOP/windows/rio\
 $TOP/windows/plumb\

DIR2=\
 $TOP/networking/ip\
  $TOP/networking/arp\
  $TOP/networking/dhcp\
  $TOP/networking/ftp\
  $TOP/networking/telnet\
  $TOP/networking/snoopy\
 $TOP/networking/ndb\
