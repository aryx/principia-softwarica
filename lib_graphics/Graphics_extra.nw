<<function freeup>>=
/* release all subfonts, return number freed */
static
int
freeup(Font *f)
{
    Cachesubf *s, *es;
    int nf;

    if(f->sub[0]->name == nil)	/* font from mkfont; don't free */
        return 0;
    s = f->subf;
    es = s+f->nsubf;
    nf = 0;
    while(s < es){
        if(s->age){
            freesubfont(s->f);
            s->cf = nil;
            s->f = nil;
            s->age = 0;
            nf++;
        }
        s++;
    }
    return nf;
}
