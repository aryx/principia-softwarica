//#define DBG if(0)

static Buffer
readbyte(Param *p, uchar *buf, int y)
{
    Buffer b;
    Memimage *img;
    int dx, isgrey, convgrey, alphaonly, copyalpha, i, nb;
    uchar *begin, *end, *r, *w, *rrepl, *grepl, *brepl, *arepl, *krepl;
