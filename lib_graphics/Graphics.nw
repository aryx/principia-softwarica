    <<[[buildfont()]] initialize cache>>

    fnt->height = strtol(s, &s, 0);
    s = skip(s);
    fnt->ascent = strtol(s, &s, 0);
    s = skip(s);
    <<[[buildfont()]] sanity check fnt fields part2>>

