static
void
_ioproc(void *arg)
{
    Keyboardctl *kc = arg;
    int m, n;
    char buf[20];
    Rune r;

    threadsetname("kbdproc");
    kc->pid = getpid();

    n = 0;
    for(;;){
        while(n>0 && fullrune(buf, n)){
            m = chartorune(&r, buf);
            n -= m;
            memmove(buf, buf+m, n);
            // sent it!
            send(kc->c, &r);
        }
        // blocking call
        m = read(kc->consfd, buf+n, sizeof buf-n);
        <<[[_ioproc()]] sanity check m from read (keyboard.c)>>
        n += m;
    }
}
