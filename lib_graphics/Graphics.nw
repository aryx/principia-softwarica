<<function [[estartfn]]>>=
ulong
estartfn(ulong key, fdt fd, int n, int (*fn)(int, Event*, uchar*, int))
{
    char buf[EMAXMSG+1];
    int i, r;

    if(fd < 0)
        drawerror(display, "events: bad file descriptor");
    if(n <= 0 || n > EMAXMSG)
        n = EMAXMSG;

    i = eforkslave(key);
    // master
    if(i < MAXSLAVE){
        eslave[i].fn = fn;
        return 1<<i;
    }
    // slave
    buf[0] = i - MAXSLAVE; // slave identifier
    while((r = read(fd, buf+1, n))>0)
        if(write(epipe[1], buf, r+1)!=r+1)
            break;

    buf[0] = MAXSLAVE;
    write(epipe[1], buf, 1);
    _exits(nil);
    return 0;
}
