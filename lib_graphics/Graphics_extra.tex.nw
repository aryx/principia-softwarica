<<function _memltofront>>=
/*
 * Pull i towards top of screen, just behind front
*/
static
void
_memltofront(Memimage *i, Memimage *front, int fill)
{
    Memlayer *l;
    Memscreen *s;
    Memimage *f, *ff, *rr;
    Rectangle x;
    int overlap;

    l = i->layer;
    s = l->screen;
    while(l->front != front){
        f = l->front;
        x = l->screenr;
        overlap = rectclip(&x, f->layer->screenr);
        if(overlap){
            memlhide(f, x);
            f->layer->clear = 0;
        }
        /* swap l and f in screen's list */
        ff = f->layer->front;
        rr = l->rear;
        if(ff == nil)
            s->frontmost = i;
        else
            ff->layer->rear = i;
        if(rr == nil)
            s->rearmost = f;
        else
            rr->layer->front = f;
        l->front = ff;
        l->rear = f;
        f->layer->front = i;
        f->layer->rear = rr;
        if(overlap && fill)
            memlexpose(i, x);
    }
}
