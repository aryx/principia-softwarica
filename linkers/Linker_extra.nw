armdpi(Opcode *o, Instr *i)
{
    ulong v;
    int c;

    v = (i->w >> 0) & 0xff;
    c = (i->w >> 8) & 0xf;
    while(c) {
        v = (v<<30) | (v>>2);
        c--;
    }
    i->imm = v;
    i->store = (i->w >> 20) & 1;
    i->rn = (i->w >> 16) & 0xf;
    i->rd = (i->w >> 12) & 0xf;
    i->rs = i->w&0x0f;

        /* RET is encoded as ADD #0,R14,R15 */
    if((i->w & 0x0fffffff) == 0x028ef000){
        format("RET%C", i, "");
        return;
    }
    if((i->w & 0x0ff0ffff) == 0x0280f000){
        format("B%C", i, "0(R%n)");
        return;
    }
    format(o->o, i, o->a);
}
