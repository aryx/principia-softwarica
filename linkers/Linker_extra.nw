<<function armmaddr(arm)>>=
static ulong
armmaddr(Map *map, Rgetter rget, Instr *i)
{
    ulong v;
    ulong nb;
    char buf[8];
    ulong rn;

    rn = (i->w >> 16) & 0xf;
    sprint(buf,"R%ld", rn);

    v = rget(map, buf);
    nb = nbits(i->w & ((1 << 15) - 1));

    switch((i->w >> 23) & 3) {
    default:
    case 0: return (v - (nb*4)) + 4;
    case 1: return v;
    case 2: return v - (nb*4);
    case 3: return v + 4;
    }
}
