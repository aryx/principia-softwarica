    Symbol s, f;

    USED(link);
    while (findsym(pc, CTEXT, &s)) {
        if(strcmp(STARTSYM, s.name) == 0 || strcmp(PROFSYM, s.name) == 0)
            break;

        if(pc != s.value) {	/* not first instruction */
            if(findlocal(&s, FRAMENAME, &f) == 0)
                break;
            sp += f.value-mach->szaddr;
        }

        if (s.value == addr)
            return sp;

        if (geta(map, sp, &pc) < 0)
            break;
        sp += mach->szaddr;
    }
    return 0;
}
