<<function armdas(arm)>>=
static int
armdas(Map *map, uvlong pc, char *buf, int n)
{
    Instr i;

    i.curr = buf;
    i.end = buf+n;
    if(decode(map, pc, &i) < 0)
        return -1;
    if(i.end-i.curr > 8)
        i.curr = _hexify(buf, i.w, 7);
    *i.curr = 0;
    return 4;
}
