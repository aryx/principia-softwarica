<<function armfmov(arm)>>=
static uvlong
armfmov(Map *map, Rgetter rget, Instr *i, uvlong pc)
{
    ulong rd, v;

    rd = (i->w >> 12) & 0xf;
    if(rd != 15 || !armcondpass(map, rget, (i->w>>28)&0xf))
        return pc+4;

     /* LDR */
    /* BUG: Needs LDH/B, too */
    if(((i->w>>26)&0x3) == 1) {
        if(get4(map, armaddr(map, rget, i), &v) < 0) {
            werrstr("can't read instruction: %r");
            return pc+4;
        }
        return v;
    }

     /* MOV */
    v = armshiftval(map, rget, i);

    return v;
}
