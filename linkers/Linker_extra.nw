printins(Map *map, uvlong pc, char *buf, int n)
{
    Instr i;

    i.curr = buf;
    i.end = buf+n-1;
    if(decode(map, pc, &i) < 0)
        return -1;

    (*opcodes[i.op].fmt)(&opcodes[i.op], &i);
    return 4;
}
