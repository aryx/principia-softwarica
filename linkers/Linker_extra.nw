<<function armfoll(arm)>>=
static int
armfoll(Map *map, uvlong pc, Rgetter rget, uvlong *foll)
{
    uvlong d;
    Instr i;

    if(decode(map, pc, &i) < 0)
        return -1;

    if(opcodes[i.op].foll) {
        d = (*opcodes[i.op].foll)(map, rget, &i, pc);
        if(d == -1)
            return -1;
    } else
        d = pc+4;

    foll[0] = d;
    return 1;
}
