    ulong v;
    ulong addr;

    v = i->w & 1<<15;
    if(!v || !armcondpass(map, rget, (i->w>>28)&0xf))
        return pc+4;

    addr = armmaddr(map, rget, i) + nbits(i->w & BITS(0,15));
