<<function armdps(arm)>>=
static void
armdps(Opcode *o, Instr *i)
{
    i->store = (i->w >> 20) & 1;
    i->rn = (i->w >> 16) & 0xf;
    i->rd = (i->w >> 12) & 0xf;
    i->rs = (i->w >> 0) & 0xf;
    if(i->rn == 15 && i->rs == 0) {
        if(i->op == 8) {
            format("MOVW", i,"CPSR, R%d");
            return;
        } else
        if(i->op == 10) {
            format("MOVW", i,"SPSR, R%d");
            return;
        }
    } else
    if(i->rn == 9 && i->rd == 15) {
        if(i->op == 9) {
            format("MOVW", i, "R%s, CPSR");
            return;
        } else
        if(i->op == 11) {
            format("MOVW", i, "R%s, SPSR");
            return;
        }
    }
    if(i->rd == 15) {
        if(i->op == 120) {
            format("MOVW", i, "PSR, %x");
            return;
        } else
        if(i->op == 121) {
            format("MOVW", i, "%x, PSR");
            return;
        }
    }
    format(o->o, i, o->a);
}
