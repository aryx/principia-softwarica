<<function armfadd(arm)>>=
static uvlong
armfadd(Map *map, Rgetter rget, Instr *i, uvlong pc)
{
    char buf[8];
    int r;

    r = (i->w >> 12) & 0xf;
    if(r != 15 || !armcondpass(map, rget, (i->w >> 28) & 0xf))
        return pc+4;

    r = (i->w >> 16) & 0xf;
    sprint(buf, "R%d", r);

    return rget(map, buf) + armshiftval(map, rget, i);
}
