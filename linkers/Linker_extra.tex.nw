<<function _mipscoinst>>=
int
_mipscoinst(Map *map, uvlong pc, char *buf, int n)
{
    Instr i;
    Opcode *o;
    uchar op;

    i.curr = buf;
    i.end = buf+n-1;
    if (mkinstr(&i, map, pc) < 0)
        return -1;
    switch (i.op) {

    case 0x00:					/* SPECIAL */
        o = sopcodes;
        op = i.function;
        break;

    case 0x01:					/* REGIMM */
        o = ropcodes;
        op = i.rt;
        break;

    case 0x10:					/* COP0 */
        cop0(&i);
        return 4;

    case 0x11:					/* COP1 */
        if (i.rs & 0x10) {
            o = fopcodes;
            op = i.function;
            break;
        }
        /*FALLTHROUGH*/
    case 0x12:					/* COP2 */
    case 0x13:					/* COP3 */
        copz(i.op-0x10, &i);
        return 4;

    default:
        o = opcodes;
        op = i.op;
        break;
    }
    format(o[op].mnemonic, &i, o[op].mipsco);
    return 4;
}
