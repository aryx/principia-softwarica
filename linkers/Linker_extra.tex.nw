    case 'x':	/* produce export table */
        doexp = 1;
        if(argv[1] != nil && argv[1][0] != '-' && !isobjfile(argv[1])){
            a = ARGF();
            if(strcmp(a, "*") == 0)
                allexport = 1;
            else
