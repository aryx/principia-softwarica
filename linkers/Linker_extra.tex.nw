static void
plocal(Instr *ip)
{
    int ret;
    long offset;
    Symbol s;
    char *reg;

    offset = ip->disp;
    if (!findsym(ip->addr, CTEXT, &s) || !findlocal(&s, FRAMENAME, &s)) {
        bprint(ip, "%lux(SP)", offset);
        return;
    }

    if (s.value > ip->disp) {
        ret = getauto(&s, s.value-ip->disp-mach->szaddr, CAUTO, &s);
        reg = "(SP)";
    } else {
        offset -= s.value;
        ret = getauto(&s, offset, CPARAM, &s);
        reg = "(FP)";
    }
    if (ret)
        bprint(ip, "%s+", s.name);
    else
        offset = ip->disp;
    bprint(ip, "%lux%s", offset, reg);
}
