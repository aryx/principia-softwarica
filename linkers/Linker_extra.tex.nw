void
putsymb(char *s, int t, long v, int ver)
{
    int i, f;

    if(t == 'f')
        s++;
    lput(v);
    if(ver)
        t += 'a' - 'A';
    cput(t+0x80);			/* 0x80 is variable length */

    if(t == 'Z' || t == 'z') {
        cput(s[0]);
        for(i=1; s[i] != 0 || s[i+1] != 0; i += 2) {
            cput(s[i]);
            cput(s[i+1]);
        }
        cput(0);
        cput(0);
        i++;
    }
    else {
        for(i=0; s[i]; i++)
            cput(s[i]);
        cput(0);
    }
    symsize += 4 + 1 + i + 1;

    if(debug['n']) {
        if(t == 'z' || t == 'Z') {
            Bprint(&bso, "%c %.8lux ", t, v);
            for(i=1; s[i] != 0 || s[i+1] != 0; i+=2) {
                f = ((s[i]&0xff) << 8) | (s[i+1]&0xff);
                Bprint(&bso, "/%x", f);
            }
            Bprint(&bso, "\n");
            return;
        }
        if(ver)
            Bprint(&bso, "%c %.8lux %s<%d>\n", t, v, s, ver);
        else
            Bprint(&bso, "%c %.8lux %s\n", t, v, s);
    }
