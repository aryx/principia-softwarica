    case 'u':	/* produce dynamically loadable module */
        dlm = 1;
        debug['l']++;
        if(argv[1] != nil && argv[1][0] != '-' && !isobjfile(argv[1]))
            readundefs(ARGF(), SIMPORT);
        break;
    } ARGEND
    USED(argc);
    if(*argv == 0)
        usage();
    if(!debug['9'] && !debug['U'] && !debug['B'])
        debug[DEFAULT] = 1;
    a = getenv("ccroot");
    if(a != nil && *a != '\0') {
        if(!fileexists(a)) {
            diag("nonexistent $ccroot: %s", a);
            errorexit();
