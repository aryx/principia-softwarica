    s = (char*)*d + n * sizeof(Dir);
    nn = 0;
    for(i = 0; i < ts; i += m){
        m = BIT16SZ + GBIT16((uchar*)&buf[i]);
        if(nn >= n || convM2D(&buf[i], m, *d + nn, s) != m){
            free(*d);
            *d = nil;
            return -1;
