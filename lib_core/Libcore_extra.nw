 *  save a new match in mp
 */
extern void
_renewmatch(Resub *mp, int ms, Resublist *sp)
{
    int i;

    if(mp==0 || ms<=0)
        return;
    if(mp[0].sp==0 || sp->m[0].sp<mp[0].sp ||
       (sp->m[0].sp==mp[0].sp && sp->m[0].ep>mp[0].ep)){
        for(i=0; i<ms && i<NSUBEXP; i++)
            mp[i] = sp->m[i];
        for(; i<ms; i++)
            mp[i].sp = mp[i].ep = 0;
    }
