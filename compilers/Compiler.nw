<<function gen3(arm)>>=
static int
gen3(int len, long r0, long r1, int flag)
{
    int i, f1, f2;
    long x;

    if(r0 <= 0 ||
       r0 >= r1 ||
       r1 > valmax)
        return 0;

    len--;
    if(len == 0)
        goto calcr0;

    if(!(flag & UR1)) {
        f1 = UR1|SR1;
        for(i=1; i<=shmax; i++) {
            x = r0<<i;
            if(x > valmax)
                break;
            if(gen3(len, r0, x, f1)) {
                i += 'a';
                goto out;
            }
        }
    }

    if(!(flag & UR0)) {
        f1 = UR1|SR1;
        for(i=1; i<=shmax; i++) {
            x = r1<<i;
            if(x > valmax)
                break;
            if(gen3(len, r1, x, f1)) {
                i += 'a';
                goto out;
            }
        }
    }

    if(!(flag & SR1)) {
        f1 = UR1|SR1|(flag&UR0);
        for(i=1; i<=shmax; i++) {
            x = r1<<i;
            if(x > valmax)
                break;
            if(gen3(len, r0, x, f1)) {
                i += 'a';
                goto out;
            }
        }
    }

    if(!(flag & SR0)) {
        f1 = UR0|SR0|(flag&(SR1|UR1));

        f2 = UR1|SR1;
        if(flag & UR1)
            f2 |= UR0;
        if(flag & SR1)
            f2 |= SR0;

        for(i=1; i<=shmax; i++) {
            x = r0<<i;
            if(x > valmax)
                break;
            if(x > r1) {
                if(gen3(len, r1, x, f2)) {
                    i += 'a';
                    goto out;
                }
            } else
                if(gen3(len, x, r1, f1)) {
                    i += 'a';
                    goto out;
                }
        }
    }

    x = r1+r0;
    if(gen3(len, r0, x, UR1)) {
        i = '+';
        goto out;
    }

    if(gen3(len, r1, x, UR1)) {
        i = '+';
        goto out;
    }

    x = r1-r0;
    if(gen3(len, x, r1, UR0)) {
        i = '-';
        goto out;
    }

    if(x > r0) {
        if(gen3(len, r0, x, UR1)) {
            i = '-';
            goto out;
        }
    } else
        if(gen3(len, x, r0, UR0)) {
            i = '-';
            goto out;
        }

    return 0;

calcr0:
    f1 = flag & (UR0|UR1);
    if(f1 == UR1) {
        for(i=1; i<=shmax; i++) {
            x = r1<<i;
            if(x >= mulval) {
                if(x == mulval) {
                    i += 'a';
                    goto out;
                }
                break;
            }
        }
    }

    if(mulval == r1+r0) {
        i = '+';
        goto out;
    }
    if(mulval == r1-r0) {
        i = '-';
        goto out;
    }

    return 0;

out:
    *--mulcp = i;
    return 1;
}
