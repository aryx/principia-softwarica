if(argc > 1) {
    nproc = 1;
    /*
     * if we're writing acid to standard output, don't compile
     * concurrently, to avoid interleaving output.
     */
    if(((!debug['a'] && !debug['Z']) || debug['n']) &&
        (p = getenv("NPROC")) != nil)
        nproc = atol(p);	/* */
    c = 0;
    nout = 0;
    for(;;) {
        while(nout < nproc && argc > 0) {
            i = fork();
            if(i < 0) {
                i = mywait(&status);
                if(i < 0) {
                    print("cannot create a process\n");
                    errorexit();
                }
                if(status)
                    c++;
                nout--;
                continue;
