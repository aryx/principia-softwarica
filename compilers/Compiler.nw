val = initpc;
for(r = firstr; r != R; r = r1) {
    r->pc = val;
    p = r->prog;
    p1 = P;
    r1 = r->link;
    if(r1 != R)
        p1 = r1->prog;
    for(; p != p1; p = p->link) {
        switch(p->as) {
