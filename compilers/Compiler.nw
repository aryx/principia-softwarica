            if(i == 0) {
                fprint(2, "%s:\n", *argv);
                if (compile(*argv, defs, ndef))
                    errorexit();
                exits(0);
            }
            nout++;
            argc--;
            argv++;
        }
        i = mywait(&status);
        if(i < 0) {
            if(c)
                errorexit();
            exits(0);
        }
        if(status)
            c++;
        nout--;
