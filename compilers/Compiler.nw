<<function reglcgen(arm)>>=
void
reglcgen(Node *t, Node *n, Node *nn)
{
    Node *r;
    long v;

    regialloc(t, n, nn);
    if(n->op == OIND) {
        r = n->left;
        while(r->op == OADD)
            r = r->right;
        if(sconst(r) && (v = r->vconst+t->xoffset) > -4096 && v < 4096) {
            v = r->vconst;
            r->vconst = 0;
            lcgen(n, t);
            t->xoffset += v;
            r->vconst = v;
            regind(t, n);
            return;
        }
    } else if(n->op == OINDREG) {
        if((v = n->xoffset) > -4096 && v < 4096) {
            n->op = OREGISTER;
            cgen(n, t);
            t->xoffset += v;
            n->op = OINDREG;
            regind(t, n);
            return;
        }
    }
    lcgen(n, t);
    regind(t, n);
}
