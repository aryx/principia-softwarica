# -*- sh -*-

# by using '@' below, rc will create a subprocess for each entry,
# which avoids the need for a pushd/popd in other shells.

all:VQ:
	for (i in $DIRS) @{
	    echo $i
		cd $i
		mk $MKFLAGS $target
	}

install uninstall clean nuke:QV:
	for (i in $DIRS) @{
	    echo $i
		cd $i
		mk $MKFLAGS $target
	}
