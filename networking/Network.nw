<<function setbit>>=
static void
setbit(Dp8390 *ctlr, int bit, int on)
{
    int i, h;

    i = bit/8;
    h = bit%8;
    if(on){
        if(++(ctlr->mref[bit]) == 1)
            ctlr->mar[i] |= 1<<h;
    } else {
        if(--(ctlr->mref[bit]) <= 0){
            ctlr->mref[bit] = 0;
            ctlr->mar[i] &= ~(1<<h);
        }
    }
}
