<<function looknode>>=
Route**
looknode(Route **cur, Route *r)
{
    Route *p;

    for(;;){
        p = *cur;
        if(p == 0)
            return 0;

        switch(rangecompare(r, p)){
        case Rcontains:
            return 0;
        case Rpreceeds:
            cur = &p->left;
            break;
        case Rfollows:
            cur = &p->right;
            break;
        case Rcontained:
            cur = &p->mid;
            break;
        case Requals:
            return cur;
        }
    }
}
