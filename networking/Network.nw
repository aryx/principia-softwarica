<<function calcd>>=
/*
 *  calculate depth
 */
static void
calcd(Route *p)
{
    Route *q;
    int d;

    if(p) {
        d = 0;
        q = p->left;
        if(q)
            d = q->depth;
        q = p->right;
        if(q && q->depth > d)
            d = q->depth;
        q = p->mid;
        if(q && q->depth > d)
            d = q->depth;
        p->depth = d+1;
    }
}
