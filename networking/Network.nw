<<function multicast>>=
static void
multicast(void* arg, uchar *addr, int on)
{
    Ether *ether;
    Dp8390 *ctlr;
    int i;
    ulong h;

    ether = arg;
    ctlr = ether->ctlr;
    if(reverse[1] == 0){
        for(i = 0; i < 64; i++)
            reverse[i] = ((i&1)<<5) | ((i&2)<<3) | ((i&4)<<1)
                   | ((i&8)>>1) | ((i&16)>>3) | ((i&32)>>5);
    }

    /*
     *  change filter bits
     */
    h = ethercrc(addr, 6);
    ilock(ctlr);
    setbit(ctlr, reverse[h&0x3f], on);
    setfilter(ether, ctlr);
    iunlock(ctlr);
}
