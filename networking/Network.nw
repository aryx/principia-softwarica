void
closeconv(Conv *cv)
{
    Conv *nc;
    Ipmulti *mp;

    qlock(cv);

    if(--cv->inuse > 0) {
        qunlock(cv);
        return;
    }

    /* close all incoming calls since no listen will ever happen */
    for(nc = cv->incall; nc; nc = cv->incall){
        cv->incall = nc->next;
        closeconv(nc);
    }
    cv->incall = nil;

    kstrdup(&cv->owner, network);
    cv->perm = 0660;

    while((mp = cv->multi) != nil)
        ipifcremmulti(cv, mp->ma, mp->ia);

    cv->r = nil;
    cv->rgen = 0;
    cv->p->close(cv);
    cv->state = Idle;
    qunlock(cv);
}
