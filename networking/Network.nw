char*
ipifcrem(Ipifc *ifc, char **argv, int argc)
{
    char *rv;
    uchar ip[IPaddrlen], mask[IPaddrlen], rem[IPaddrlen];
    Iplifc *lifc;

    if(argc < 3)
        return Ebadarg;

    if (parseip(ip, argv[1]) == -1)
