<<function addnode>>=
/*
 *  add a new node to the tree
 */
static void
addnode(Fs *f, Route **cur, Route *new)
{
    Route *p;

    p = *cur;
    if(p == 0) {
        *cur = new;
        new->depth = 1;
        return;
    }

    switch(rangecompare(new, p)){
    case Rpreceeds:
        addnode(f, &p->left, new);
        break;
    case Rfollows:
        addnode(f, &p->right, new);
        break;
    case Rcontains:
        /*
         *  if new node is superset
         *  of tree node,
         *  replace tree node and
         *  queue tree node to be
         *  merged into root.
         */
        *cur = new;
        new->depth = 1;
        addqueue(&f->queue, p);
        break;
    case Requals:
        /*
         *  supercede the old entry if the old one isn't
         *  a local interface.
         */
        if((p->type & Rifc) == 0){
            p->type = new->type;
            p->ifcid = -1;
            copygate(p, new);
        } else if(new->type & Rifc)
            p->ref++;
        freeroute(new);
        break;
    case Rcontained:
        addnode(f, &p->mid, new);
        break;
    }

    balancetree(cur);
}
