/*
 *  balance the tree at the current node
 */
static void
balancetree(Route **cur)
{
    Route *p, *l, *r;
    int dl, dr;

    /*
     * if left and right are
     * too out of balance,
     * rotate tree node
     */
    p = *cur;
    dl = 0; if(l = p->left) dl = l->depth;
    dr = 0; if(r = p->right) dr = r->depth;

    if(dl > dr+1) {
        p->left = l->right;
        l->right = p;
        *cur = l;
        calcd(p);
        calcd(l);
    } else
    if(dr > dl+1) {
        p->right = r->left;
        r->left = p;
