<<function routetype>>=
void
routetype(int type, char *p)
{
    memset(p, ' ', 4);
    p[4] = 0;
    if(type & Rv4)
        *p++ = '4';
    else
        *p++ = '6';
    if(type & Rifc)
        *p++ = 'i';
    if(type & Runi)
        *p++ = 'u';
    else if(type & Rbcast)
        *p++ = 'b';
    else if(type & Rmulti)
        *p++ = 'm';
    if(type & Rptpt)
        *p = 'p';
}
