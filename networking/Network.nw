 *    returns 0 if nothing is deleted, 1 otherwise
 */
int
routeflush(Fs *f, Route *r, char *tag)
{
    if(r == nil)
        return 0;
    if(routeflush(f, r->mid, tag))
        return 1;
    if(routeflush(f, r->left, tag))
        return 1;
    if(routeflush(f, r->right, tag))
        return 1;
    if((r->type & Rifc) == 0){
        if(tag == nil || strncmp(tag, r->tag, sizeof(r->tag)) == 0){
            delroute(f, r, 0);
            return 1;
        }
    }
    return 0;
}
