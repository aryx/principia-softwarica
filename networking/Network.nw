    regw(ctlr, Cr, Page0|RdABORT|Stp);
    regw(ctlr, Rbcr0, 0);
    regw(ctlr, Rbcr1, 0);
    for(timo = 10000; (regr(ctlr, Isr) & Rst) == 0 && timo; timo--)
