<<function ilfreeq>>=
void
ilfreeq(Ilcb *ic)
{
    Block *bp, *next;

    qlock(&ic->ackq);
    for(bp = ic->unacked; bp; bp = next) {
        next = bp->list;
        freeblist(bp);
    }
    ic->unacked = nil;
    qunlock(&ic->ackq);

    qlock(&ic->outo);
    for(bp = ic->outoforder; bp; bp = next) {
        next = bp->list;
        freeblist(bp);
    }
    ic->outoforder = nil;
    qunlock(&ic->outo);
}
