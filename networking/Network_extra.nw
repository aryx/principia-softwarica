<<function igbectl>>=
static long
igbectl(Ether* edev, void* buf, long n)
{
    int v;
    char *p;
    CtlrEtherIgbe *ctlr;
    Cmdbuf *cb;
    Cmdtab *ct;

    if((ctlr = edev->ctlr) == nil)
        error(Enonexist);

    cb = parsecmd(buf, n);
    if(waserror()){
        free(cb);
        nexterror();
    }

    ct = lookupcmd(cb, igbectlmsg, nelem(igbectlmsg));
    switch(ct->index){
    case CMrdtr:
        v = strtol(cb->f[1], &p, 0);
        if(v < 0 || p == cb->f[1] || v > 0xFFFF)
            error(Ebadarg);
        ctlr->rdtr = v;
        csr32w(ctlr, Rdtr, Fpd|v);
        break;
    }
    free(cb);
    poperror();

    return n;
}
