/*
 *  retransmit (at most) one segment at snd.una.
 *  preserve cwind & snd.ptr
 */
static void
tcprxmit(Conv *s)
{
    Tcpctl *tcb;
    Tcppriv *tpriv;
    ulong tcwind, tptr;

    tcb = (Tcpctl*)s->ptcl;
    tcb->flags |= RETRAN|FORCE;

    tptr = tcb->snd.ptr;
    tcwind = tcb->cwind;
    tcb->snd.ptr = tcb->snd.una;
    tcb->cwind = tcb->mss;
    tcb->snd.retransmit = 1;
    tcpoutput(s);
    tcb->snd.retransmit = 0;
    tcb->cwind = tcwind;
    tcb->snd.ptr = tptr;

    tpriv = s->p->priv;
    tpriv->stats[RetransSegs]++;
}
