<<function ilsettimeout>>=
void
ilsettimeout(Ilcb *ic)
{
    ulong pt;

    pt = (ic->delay>>LogAGain)
        + ic->unackedbytes/(ic->rate>>LogAGain)
        + (ic->mdev>>(LogDGain-1))
        + AckDelay;
    if(pt > MaxTimeout)
        pt = MaxTimeout;
    ic->timeout = NOW + pt;
}
