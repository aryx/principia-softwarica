static void
etherrtrace(Netfile* f, Etherpkt* pkt, int len)
{
    int i, n;
    Block *bp;

    if(qwindow(f->in) <= 0)
        return;
    if(len > 58)
        n = 58;
    else
        n = len;
    bp = iallocb(64);
    if(bp == nil)
        return;
    memmove(bp->wp, pkt->d, n);
    i = TK2MS(CPUS(0)->ticks);
    bp->wp[58] = len>>8;
    bp->wp[59] = len;
    bp->wp[60] = i>>24;
    bp->wp[61] = i>>16;
    bp->wp[62] = i>>8;
    bp->wp[63] = i;
    bp->wp += 64;
    qpass(f->in, bp);
}
