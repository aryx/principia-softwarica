/*
 *  if we've timed out, close the connection
 *  otherwise, send a keepalive and restart the timer
 */
static void
tcpkeepalive(void *v)
{
    Tcpctl *tcb;
    Conv *s;

    s = v;
    tcb = (Tcpctl*)s->ptcl;
    if(waserror()){
        qunlock(s);
        nexterror();
    }
    qlock(s);
    if(tcb->state != Closed){
        if(--(tcb->kacounter) <= 0) {
            localclose(s, Etimedout);
        } else {
            tcpsendka(s);
            tcpgo(s->p->priv, &tcb->katimer);
        }
    }
    qunlock(s);
    poperror();
}
