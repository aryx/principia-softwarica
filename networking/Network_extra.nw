    int i;
    Block *bp;

    /* temporarily keep Mpe on */
    csr32w(ctlr, Rctl, Dpf|Bsize2048|Bam|RdtmsHALF|Mpe);

    csr32w(ctlr, Rdbal, PCIWADDR(ctlr->rdba));
