    Ipmulti *multi, **l;
    Iplifc *lifc;
    Conv **p;
    Ipifc *ifc;
    Fs *f;

    f = c->p->f;

    for(l = &c->multi; *l; l = &(*l)->next)
        if(ipcmp(ma, (*l)->ma) == 0 && ipcmp(ia, (*l)->ia) == 0)
            break;

    multi = *l;
    if(multi == nil)
        return;     /* we don't have it open */

