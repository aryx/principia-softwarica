static int
netown(Netfile *p, char *o, int omode)
{
    static int access[] = { 0400, 0200, 0600, 0100 };
    int mode;
    int t;

    lock(&netlock);
    if(*p->owner){
        if(strncmp(o, p->owner, KNAMELEN) == 0) /* User */
            mode = p->mode;
        else if(strncmp(o, eve, KNAMELEN) == 0) /* Bootes is group */
            mode = p->mode<<3;
        else
            mode = p->mode<<6;      /* Other */

        t = access[omode&3];
        if((t & mode) == t){
            unlock(&netlock);
            return 0;
        } else {
            unlock(&netlock);
            return -1;
        }
    }
    strncpy(p->owner, o, KNAMELEN);
    p->mode = 0660;
    unlock(&netlock);
    return 0;
}
