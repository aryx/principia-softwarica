<<function ilbackoff>>=
void
ilbackoff(Ilcb *ic)
{
    ulong pt;
    int i;

    pt = (ic->delay>>LogAGain)
        + ic->unackedbytes/(ic->rate>>LogAGain)
        + (ic->mdev>>(LogDGain-1))
        + AckDelay;
    for(i = 0; i < ic->rexmit; i++)
        pt = pt + (pt>>1);
    if(pt > MaxTimeout)
        pt = MaxTimeout;
    ic->timeout = NOW + pt;

    if(ic->fasttimeout)
        ic->timeout = NOW+Iltickms;

    ic->rexmit++;
}
