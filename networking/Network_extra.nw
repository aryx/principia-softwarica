static int
i82543miimir(Mii* mii, int pa, int ra)
{
    int data;
    CtlrEtherIgbe *ctlr;

    ctlr = mii->ctlr;

    /*
     * MII Management Interface Read.
     *
     * Preamble;
     * ST+OP+PHYAD+REGAD;
     * TA + 16 data bits.
     */
    i82543mdiow(ctlr, 0xFFFFFFFF, 32);
    i82543mdiow(ctlr, 0x1800|(pa<<5)|ra, 14);
    data = i82543mdior(ctlr, 18);

    if(data & 0x10000)
        return -1;

    return data & 0xFFFF;
