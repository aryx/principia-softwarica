static void
igbereplenish(CtlrEtherIgbe* ctlr)
{
    Rd *rd;
    int rdt;
    Block *bp;

    rdt = ctlr->rdt;
    while(NEXT(rdt, ctlr->nrd) != ctlr->rdh){
        rd = &ctlr->rdba[rdt];
        if(ctlr->rb[rdt] == nil){
            bp = igberballoc();
            if(bp == nil){
                iprint("#l%d: igbereplenish: no available buffers\n",
                    ctlr->edev->ctlrno);
                break;
            }
            ctlr->rb[rdt] = bp;
            rd->addr[0] = PCIWADDR(bp->rp);
            rd->addr[1] = 0;
        }
        arch_coherence();
        rd->status = 0;
        rdt = NEXT(rdt, ctlr->nrd);
        ctlr->rdfree++;
    }
    ctlr->rdt = rdt;
    csr32w(ctlr, Rdt, rdt);
}
