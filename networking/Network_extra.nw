<<function openfile>>=
/*
 *  Increment the reference count of a network device.
 *  If id < 0, return an unused ether device.
 */
static int
openfile(Netif *nif, int id)
{
    Netfile *f, **fp, **efp;

    if(id >= 0){
        f = nif->f[id];
        if(f == 0)
            error(Enodev);
        qlock(f);
        qreopen(f->in);
        f->inuse++;
        qunlock(f);
        return id;
    }

    qlock(nif);
    if(waserror()){
        qunlock(nif);
        nexterror();
    }
    efp = &nif->f[nif->nfile];
    for(fp = nif->f; fp < efp; fp++){
        f = *fp;
        if(f == 0){
            f = malloc(sizeof(Netfile));
            if(f == 0)
                exhausted("memory");
            f->in = qopen(nif->limit, Qmsg, 0, 0);
            if(f->in == nil){
                free(f);
                exhausted("memory");
            }
            *fp = f;
            qlock(f);
        } else {
            qlock(f);
            if(f->inuse){
                qunlock(f);
                continue;
            }
        }
        f->inuse = 1;
        qreopen(f->in);
        netown(f, up->user, 0);
        qunlock(f);
        qunlock(nif);
        poperror();
        return fp - nif->f;
    }
    error(Enodev);
    return -1;  /* not reached */
}
