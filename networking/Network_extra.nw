<<function tcpsetstate>>=
static void
tcpsetstate(Conv *s, uchar newstate)
{
    Tcpctl *tcb;
    uchar oldstate;
    Tcppriv *tpriv;

    tpriv = s->p->priv;

    tcb = (Tcpctl*)s->ptcl;

    oldstate = tcb->state;
    if(oldstate == newstate)
        return;

    if(oldstate == Established)
        tpriv->stats[CurrEstab]--;
    if(newstate == Established)
        tpriv->stats[CurrEstab]++;

    switch(newstate) {
    case Closed:
        qclose(s->rq);
        qclose(s->wq);
        qclose(s->eq);
        break;

    case Close_wait:        /* Remote closes */
        qhangup(s->rq, nil);
        break;
    }

    tcb->state = newstate;

    if(oldstate == Syn_sent && newstate != Closed)
        Fsconnected(s, nil);
}
