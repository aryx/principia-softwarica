        wlock(ifc);
        for(lifc = ifc->lifc; lifc; lifc = lifc->next)
            if(ipcmp(ia, lifc->local) == 0)
                remselfcache(f, ifc, lifc, ma);
        wunlock(ifc);
        poperror();
