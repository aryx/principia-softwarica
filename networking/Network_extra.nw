static Block*
htontcp4(Tcp *tcph, Block *data, Tcp4hdr *ph, Tcpctl *tcb)
{
    int dlen;
    Tcp4hdr *h;
    ushort csum;
    ushort hdrlen, optpad = 0;
    uchar *opt;

    hdrlen = TCP4_HDRSIZE;
    if(tcph->flags & SYN){
        if(tcph->mss)
            hdrlen += MSS_LENGTH;
        if(1)
            hdrlen += WS_LENGTH;
        optpad = hdrlen & 3;
        if(optpad)
            optpad = 4 - optpad;
        hdrlen += optpad;
    }

    if(data) {
        dlen = blocklen(data);
        data = padblock(data, hdrlen + TCP4_PKT);
        if(data == nil)
            return nil;
