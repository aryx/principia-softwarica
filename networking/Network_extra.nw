/*
 *  make sure this type isn't already in use on this device
 */
static int
typeinuse(Netif *nif, int type)
{
    Netfile *f, **fp, **efp;

    if(type <= 0)
        return 0;

    efp = &nif->f[nif->nfile];
    for(fp = nif->f; fp < efp; fp++){
        f = *fp;
        if(f == 0)
            continue;
        if(f->type == type)
            return 1;
    }
    return 0;
}
