<<function igbepromiscuous>>=
static void
igbepromiscuous(void* arg, int on)
{
    int rctl;
    CtlrEtherIgbe *ctlr;
    Ether *edev;

    edev = arg;
    ctlr = edev->ctlr;

    rctl = csr32r(ctlr, Rctl);
    rctl &= ~MoMASK;
    rctl |= Mo47b36;
    if(on)
        rctl |= Upe|Mpe;
    else
        rctl &= ~(Upe|Mpe);
    csr32w(ctlr, Rctl, rctl|Mpe);   /* temporarily keep Mpe on */
}
