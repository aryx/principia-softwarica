static void
tcpackproc(void *a)
{
    Tcptimer *t, *tp, *timeo;
    Proto *tcp;
    Tcppriv *priv;
    int loop;

    tcp = a;
    priv = tcp->priv;

    for(;;) {
        tsleep(&up->sleepr, returnfalse, 0, MSPTICK);

        qlock(&priv->tl);
        timeo = nil;
        loop = 0;
        for(t = priv->timers; t != nil; t = tp) {
            if(loop++ > 10000)
                panic("tcpackproc1");
            tp = t->next;
            if(t->state == TcptimerON) {
                t->count--;
                if(t->count == 0) {
                    timerstate(priv, t, TcptimerDONE);
                    t->readynext = timeo;
                    timeo = t;
                }
            }
        }
        qunlock(&priv->tl);

        loop = 0;
        for(t = timeo; t != nil; t = t->readynext) {
            if(loop++ > 10000)
                panic("tcpackproc2");
            if(t->state == TcptimerDONE && t->func != nil && !waserror()){
                (*t->func)(t->arg);
                poperror();
            }
