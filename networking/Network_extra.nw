/*
 *  parse a hex mac address
 */
int
parsemac(uchar *to, char *from, int len)
{
    char nip[4];
    char *p;
    int i;

    p = from;
    memset(to, 0, len);
    for(i = 0; i < len; i++){
        if(p[0] == '\0' || p[1] == '\0')
            break;

        nip[0] = p[0];
        nip[1] = p[1];
        nip[2] = '\0';
        p += 2;

        to[i] = strtoul(nip, 0, 16);
        if(*p == ':')
            p++;
    }
    return i;
}
