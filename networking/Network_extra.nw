procsyn(Conv *s, Tcp *seg)
{
    Tcpctl *tcb;
    Tcppriv *tpriv;

    tcb = (Tcpctl*)s->ptcl;
    tcb->flags |= FORCE;

    tcb->rcv.nxt = seg->seq + 1;
    tcb->rcv.wptr = tcb->rcv.nxt;
