<<function ilnextqt>>=
int
ilnextqt(Ilcb *ic)
{
    int x;

    qlock(&ic->ackq);
    x = ic->qtx;
    if(++x > Nqt)
        x = 1;
    ic->qtx = x;
    ic->qt[x] = ic->next-1;	/* highest xmitted packet */
    ic->qt[0] = ic->qt[x];	/* compatibility with old implementations */
    qunlock(&ic->ackq);

    return x;
}
