static int
multicastea(uchar *ea, uchar *ip)
{
    int x;

    switch(x = ipismulticast(ip)){
    case V4:
        ea[0] = 0x01;
        ea[1] = 0x00;
        ea[2] = 0x5e;
        ea[3] = ip[13] & 0x7f;
        ea[4] = ip[14];
        ea[5] = ip[15];
