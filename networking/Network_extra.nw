<<function netlog>>=
void
netlog(Fs *f, int mask, char *fmt, ...)
{
    char buf[256], *t, *fp;
    int i, n;
    va_list arg;

    if(!(f->alog->logmask & mask))
        return;

    if(f->alog->opens == 0)
        return;

    va_start(arg, fmt);
    n = vseprint(buf, buf+sizeof(buf), fmt, arg) - buf;
    va_end(arg);

    lock(f->alog);
    i = f->alog->len + n - Nlog;
    if(i > 0){
        f->alog->len -= i;
        f->alog->rptr += i;
        if(f->alog->rptr >= f->alog->end)
            f->alog->rptr = f->alog->buf + (f->alog->rptr - f->alog->end);
    }
    t = f->alog->rptr + f->alog->len;
    fp = buf;
    f->alog->len += n;
    while(n-- > 0){
        if(t >= f->alog->end)
            t = f->alog->buf + (t - f->alog->end);
        *t++ = *fp++;
    }
    unlock(f->alog);

    wakeup(f->alog);
}
