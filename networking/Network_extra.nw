<<function later>>=
int
later(ulong t1, ulong t2, char *x)
{
    int dt;

    dt = t1 - t2;
    if(dt > 0) {
        if(x != nil && dt > Tfuture)
            print("%s: way future %d\n", x, dt);
        return 1;
    }
    if(dt < -Tfuture) {
        if(x != nil)
            print("%s: way past %d\n", x, -dt);
        return 1;
    }
    return 0;
