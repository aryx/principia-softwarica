{
    Tcpctl *tcb;
    Tcppriv *tpriv;
    char kpname[KNAMELEN];

    tpriv = s->p->priv;

    if(tpriv->ackprocstarted == 0){
        qlock(&tpriv->apl);
        if(tpriv->ackprocstarted == 0){
            snprint(kpname, sizeof kpname, "#I%dtcpack", s->p->f->dev);
