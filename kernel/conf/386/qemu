# A simple kernel configuration for running under qemu.

# The format of this file is:
#  <section>
#  TAB<file>SPACE+<file_dependencies>*
#
# One must use TAB, and not spaces for indenting entries in a section.
# The dev section entries have an implicit dev prefixed
# so an entry like  '    draw  vgascreen foo' really means
# that devdraw.c depends on vgascreen.c and foo.c

dev
	root
	cons

	env
	proc
	sys

	pipe
	dup

	arch

	mnt
	srv

	rtc

	fs

	ether		netif
	ip		arp chandial ip ipv6 ipaux iproute netlog nullmedium pktmedium ptclbsum386

	draw		vgascreen drawalloc drawerror drawinit drawmesg drawmisc drawname drawwindow

	vga
	mouse		mouse
	audio		dma

	floppy		dma
	sd

	uart

link
	realmode
	ether2000  ether8390
	etherigbe	pci ethermii

	ethermedium
	loopbackmedium


ip
	tcp
	udp
	ipifc
	icmp
	icmp6
	il
#

misc
	sdata		pci sdscsi
	uarti8250
	uartisa
	vgavesa
	vgaclgd542x	+cur
	archmp		mp apic mpacpi


port
	int cpuserver = 0;

boot boot #S/sdC0/
	local

bootdir
	boot.rc boot
	../../../../root/rc/lib/rcmain
	../../../../root/386/bin/rc
	../../../../root/386/bin/echo
	../../../../root/386/bin/bind
	../../../../root/386/bin/disk/fdisk
	../../../../root/386/bin/dossrv
	../../../../root/386/bin/mount

