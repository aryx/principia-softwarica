# -*- sh -*-
# A simple kernel configuration for running under Qemu.

# The format of this file is:
#  <section>
#  TAB<file>SPACE+<file_dependencies>*
#
# You must use TABs, and not spaces for indenting entries in a section.
# Moreover, the 'dev' section entries have an implicit 'dev' prefixed to <file>,
# so an entry like  'draw  vgascreen foo' really means that it will link
# devdraw.c (and that this file then depends on vgascreen.c and foo.c).
#
# This file is processed by the script ../port/mkdevc

dev
# essential
	root
	cons
# system
	env
	proc
	sys
	pipe
	dup
	arch
	mnt
	srv
# display
	draw	screen drawalloc drawerror drawinit drawmesg drawmisc drawname drawwindow
	vga
# mouse
	mouse	mouse
# keyboard
# audio
	audio	dma
# storage
	sd
	floppy	dma
# network
	ether	netif
	ip		arp chandial ip ipv6 ipaux iproute netlog nullmedium pktmedium ptclbsum386
# clock
	rtc
# buses
	uart


link
	realmode
	ether2000  ether8390
	etherigbe	pci ethermii

	ethermedium
	loopbackmedium


ip
	tcp
	udp
	ipifc
	icmp
	icmp6
	il


misc
# storage
	sdata		pci sdscsi
# buses
	uarti8250
	uartisa
# display
	vgavesa
	vgaclgd542x	+cur
# smp
	archmp		mp apic mpacpi


port
	int cpuserver = 0;

boot boot #S/sdC0/
	local

bootdir
	boot.rc boot
	../../../../root/rc/lib/rcmain
	../../../../root/386/bin/rc
	../../../../root/386/bin/echo
	../../../../root/386/bin/bind
	../../../../root/386/bin/disk/fdisk
	../../../../root/386/bin/dossrv
	../../../../root/386/bin/mount

# when testing with minimal shell
#	/386/bin/sh boot

# minimal set
#	boot$CONF.out boot
#	/386/bin/dossrv
#	/386/bin/mount

# extended set
#	boot$CONF.out boot
#	/386/bin/sh
#	/386/bin/rc
#	/386/bin/disk/fdisk
#	/386/bin/ls
#	/386/bin/cat
#	/386/bin/echo
#	/386/bin/mkdir
#	/386/bin/rm
#	/386/bin/ramfs
#	/386/bin/bind
#	/386/bin/disk/prep
#	/386/bin/fossil
#	/386/bin/pad
#	/386/bin/disk/format
#	/386/bin/9660srv
#	/386/bin/ipconfig
