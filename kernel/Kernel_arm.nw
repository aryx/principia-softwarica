    int n, max;
    char *p;

    n = 4;
    if(n > MAXCPUS)
        n = MAXCPUS;
    p = getconf("*ncpu");
    if(p && (max = atoi(p)) > 0 && n > max)
        n = max;
    return n;
}

static int
startcpu(uint cpu)
{
    Mboxes *mb;
    int i;
    void cpureset();

    mb = (Mboxes*)(ARMLOCAL + Mboxregs);
    if(mb->clr[cpu].startcpu)
        return -1;
    mb->set[cpu].startcpu = PADDR(cpureset);
    for(i = 0; i < 1000; i++)
        if(mb->clr[cpu].startcpu == 0)
            return 0;
    mb->clr[cpu].startcpu = PADDR(cpureset);
    mb->set[cpu].doorbell = 1;
    return 0;
}

int
startcpus(uint ncpu)
{
    int i;

    for(i = 0; i < ncpu; i++)
        lock(&startlock[i]);
    cachedwbse(startlock, sizeof startlock);
    for(i = 1; i < ncpu; i++){
        if(startcpu(i) < 0)
            return i;
        lock(&startlock[i]);
        unlock(&startlock[i]);
    }
    return ncpu;
}


