uvlong
clock_arch_fastticks(uvlong *hz)
{
    Systimers *tn;
    ulong lo, hi;
    uvlong now;
    int s;

    if(hz)
        *hz = SystimerFreq;
    tn = (Systimers*)SYSTIMERS;
    s = arch_splhi();
    do{
        hi = tn->chi;
        lo = tn->clo;
