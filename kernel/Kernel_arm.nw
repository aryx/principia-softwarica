{
    Systimers *tn;
    uvlong now;
    long period;

    now = arch_fastticks(nil);
    period = next - now;
    if(period < MinPeriod)
        period = MinPeriod;
    else if(period > MaxPeriod)
        period = MaxPeriod;
    if(cpu->cpuno > 0){
        cpwrsc(0, CpTIMER, CpTIMERphys, CpTIMERphysval, period);
        cpwrsc(0, CpTIMER, CpTIMERphys, CpTIMERphysctl, Enable);
    }else{
        tn = (Systimers*)SYSTIMERS;
        tn->c3 = (ulong)(now + period);
    }
}
