void
i8250config(char *p)
{
    Uart *uart;
    int n;
    char *cmd;

    if(p == nil)
        return;
    n = strtoul(p, &cmd, 0);
    if(p == cmd)
        return;
    switch(n){
    default:
        return;
    case 0:
        uart = &i8250uart[0];
        break;
    case 1:
        uart = &i8250uart[1];
        break;  
    }

    if(!uart->enabled)
        (*uart->phys->enable)(uart, 0);
    uartctl(uart, "b9600 l8 pn s1");
    if(*cmd != '\0')
        uartctl(uart, cmd);

    consuart = uart;
    uart->console = true;
}

void
i8250console(void)
{
    i8250config(getconf("console"));
}


