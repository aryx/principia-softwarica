    ureg->ax = ret;

    <<[[syscall()]] Proc_tracesyscall if, syscall exit(x86)>>

    up->insyscall = false;
    up->psstate = nil;

    <<[[syscall()]] call noted()>>
    <<[[syscall()]] call notify()(x86)>>

    <<[[syscall()]] if delaysched(x86)>>
    kexit(ureg);
}
