static int
pcicfgrw8bios(int tbdf, int rno, int data, int read)
{
    BIOS32ci ci;

    if(pcibiossi == nil)
        return -1;

    memset(&ci, 0, sizeof(BIOS32ci));
    ci.ebx = (BUSBNO(tbdf)<<8)|(BUSDNO(tbdf)<<3)|BUSFNO(tbdf);
    ci.edi = rno;
    if(read){
        ci.eax = 0xB108;
        if(!bios32ci(pcibiossi, &ci)/* && !(ci.eax & 0xFF)*/)
            return ci.ecx & 0xFF;
