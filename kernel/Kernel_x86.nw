static long  
rtcread(Chan* c, void* buf, long n, vlong off)
{
    ulong t;
    char *a, *start;
    ulong offset = off;

    if(c->qid.type & QTDIR)
        return devdirread(c, buf, n, rtcdir, nelem(rtcdir), devgen);

    switch((ulong)c->qid.path){
    case Qrtc:
        t = rtctime();
        n = readnum(offset, buf, n, t, 12);
        return n;
    case Qnvram:
        if(n == 0)
            return 0;
        if(n > Nvsize)
            n = Nvsize;
        a = start = smalloc(n);

        ilock(&nvrtlock);
        for(t = offset; t < offset + n; t++){
            if(t >= Nvsize)
                break;
            outb(Paddr, Nvoff+t);
            *a++ = inb(PdataPort);
        }
        iunlock(&nvrtlock);

        if(waserror()){
            free(start);
            nexterror();
        }
        memmove(buf, start, t - offset);
        poperror();

        free(start);
        return t - offset;
    }
    error(Ebadarg);
    return 0;
}

