    int t;
    char *a, *start;
    Rtc rtc;
    ulong secs;
    uchar bcdclock[Nbcd];
    char *cp, *ep;
    ulong offset = off;

    if(offset!=0)
        error(Ebadarg);


    switch((ulong)c->qid.path){
    case Qrtc:
