    ulong esr;

    lapicw(LapicESR, 0);
    esr = lapicr(LapicESR);
    switch(cpu->cpuidax & 0xFFF){
    case 0x526:             /* stepping cB1 */
    case 0x52B:             /* stepping E0 */
    case 0x52C:             /* stepping cC0 */
        return;
    }
    print("cpu%d: lapicerror: 0x%8.8luX\n", cpu->cpuno, esr);
