        sec2rtc(secs, &rtc);
        PUTBCD(rtc.sec, 0);
        PUTBCD(rtc.min, 1);
        PUTBCD(rtc.hour, 2);
        PUTBCD(rtc.mday, 3);
        PUTBCD(rtc.mon, 4);
        PUTBCD(rtc.year, 5);

        /*
