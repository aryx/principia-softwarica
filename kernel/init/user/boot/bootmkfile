BOOTDIR=../boot
BOOTLIB=$BOOTDIR/libboot.a$O

BOOTFILES=\
        aux.$O\
	boot.$O\
	local.$O\

$BOOTLIB(%.$O):N:	%.$O

$BOOTLIB:	${BOOTFILES:%=$BOOTLIB(%)}
	ar vu $BOOTLIB $BOOTFILES

#old:
#	ar vu $BOOTLIB $names
#	#names=`{rc membername $newprereq}
#	rm $names

$BOOTFILES:	$BOOTDIR/boot.h

%.$O:	$BOOTDIR/%.c
	$CC -I$BOOTDIR $CFLAGS $BOOTDIR/$stem.c
