    else if(bus->type == BusPCI){
        bus->po = PcmpLOW;
        bus->el = PcmpLEVEL;
    }
    else if(bus->type == BusISA){
        bus->po = PcmpHIGH;
        bus->el = PcmpEDGE;
        if(mpisabus != -1)
            print("mkbus: more than one ISA bus\n");
        mpisabus = bus->busno;
    }
    else{
        bus->po = PcmpHIGH;
        bus->el = PcmpEDGE;
    }

