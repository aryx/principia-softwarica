static int
i8250getc(Uart *uart)
{
    CtlrUart *ctlr;

    ctlr = uart->regs;
    while(!(csr8r(ctlr, Lsr)&Dr))
        delay(1);
    return csr8r(ctlr, Rbr);
}

static void
i8250putc(Uart *uart, int c)
{
    int i;
    CtlrUart *ctlr;

    ctlr = uart->regs;
    for(i = 0; !(csr8r(ctlr, Lsr)&Thre) && i < 128; i++)
        delay(1);
    outb(ctlr->io+Thr, c);
    for(i = 0; !(csr8r(ctlr, Lsr)&Thre) && i < 128; i++)
        delay(1);
}

