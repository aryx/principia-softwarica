<<function microdelay>>=
void
i8253_microdelay(int microsecs)
{
    if (watchdogon && cpu->cpuno == 0 && !islo())
        for (; microsecs > Wdogms*1000; microsecs -= Wdogms*1000) {
            delay(Wdogms);
            watchdog->restart();
        }
    microsecs *= cpu->loopconst;
    microsecs /= 1000;
    if(microsecs <= 0)
