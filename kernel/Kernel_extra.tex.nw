static Bus*
mkbus(PCMPbus* p)
{
    Bus *bus;
    int i;

    for(i = 0; buses[i]; i++){
        if(strncmp(buses[i], p->string, sizeof(p->string)) == 0)
            break;
    }
    if(buses[i] == 0)
        return 0;

    bus = xalloc(sizeof(Bus));
    if(mpbus)
        mpbuslast->next = bus;
    else
        mpbus = bus;
    mpbuslast = bus;

    bus->type = i;
    bus->busno = p->busno;
    if(bus->type == BusEISA){
        bus->po = PcmpLOW;
        bus->el = PcmpLEVEL;
        if(mpeisabus != -1)
            print("mkbus: more than one EISA bus\n");
        mpeisabus = bus->busno;
