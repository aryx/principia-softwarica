/*
 * Remove mappings.  Must already exist, for sanity.
 * Only used for kernel mappings, so okay to use KADDR.
 */
static void
pdunmap(kern_addr2 mmupd, virt_addr va, int size)
{
    virt_addr vae;
    kern_addr2 pde, pte;
    
    vae = va+size;
    while(va < vae){
        pde = &mmupd[PDX(va)];
        if(!(*pde & PTEVALID)){
            panic("vunmap: not mapped");
            /* 
            va = (va+4*MB-1) & ~(4*MB-1);
            continue;
            */
        }
        if(*pde & PTESIZE){
            *pde = 0;
            va = (va+4*MB-1) & ~(4*MB-1);
            continue;
        }
        pte = KADDR(PPN(*pde));
        if(!(pte[PTX(va)] & PTEVALID))
            panic("vunmap: not mapped");
        pte[PTX(va)] = 0;
        va += BY2PG;
    }
}
