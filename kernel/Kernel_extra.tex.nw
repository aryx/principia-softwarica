            cmderror(cb, "invalid pge ctl");
        break;
    case CMcoherence:
        if(strcmp(cb->f[1], "mb386") == 0)
            coherence = mb386;
        else if(strcmp(cb->f[1], "mb586") == 0){
            if(X86FAMILY(cpu->cpuidax) < 5)
                error("invalid coherence ctl on this cpu family");
            coherence = mb586;
