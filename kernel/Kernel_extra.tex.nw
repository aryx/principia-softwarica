void
i8253_delay(int millisecs)
{
    if (millisecs > 10*1000)
        iprint("delay(%d) from %#p\n", millisecs,
            getcallerpc(&millisecs));
    if (watchdogon && cpu->cpuno == 0 && !islo())
        for (; millisecs > Wdogms; millisecs -= Wdogms) {
            delay(Wdogms);
            watchdog->restart();
        }
    millisecs *= cpu->loopconst;
    if(millisecs <= 0)
        millisecs = 1;
    aamloop(millisecs);
}
