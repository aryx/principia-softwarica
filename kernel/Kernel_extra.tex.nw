pcimatch(Pcidev* prev, int vid, int did)
{
    if(pcicfgmode == -1)
        pcicfginit();

    if(prev == nil)
        prev = pcilist;
    else
        prev = prev->list;

    while(prev != nil){
        if((vid == 0 || prev->vid == vid)
        && (did == 0 || prev->did == did))
            break;
        prev = prev->list;
    }
    return prev;
}

