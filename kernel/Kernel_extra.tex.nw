static int
ataenable(SDev* sdev)
{
    Ctlr *ctlr;
    char name[32];

    ctlr = sdev->ctlr;

    if(ctlr->bmiba){
        if(ctlr->pcidev != nil)
            pcisetbme(ctlr->pcidev);
